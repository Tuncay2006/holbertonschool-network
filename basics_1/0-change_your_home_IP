#!/bin/bash

# Hosts dosyasının yolu
HOSTS_FILE="/etc/hosts"

# Yedekleme (güvenlik için)
cp $HOSTS_FILE "${HOSTS_FILE}.bak"

# localhost'u 127.0.0.2 olarak yeniden ayarla
# Eski localhost tanımını kaldır, sonra yenisini ekle
sed -i '/127\.0\.0\.1\s\+localhost/d' "$HOSTS_FILE"
echo "127.0.0.2   localhost" >> "$HOSTS_FILE"

# facebook.com'u 8.8.8.8 olarak tanımla (varsa önce sil)
sed -i '/facebook\.com/d' "$HOSTS_FILE"
echo "8.8.8.8   facebook.com" >> "$HOSTS_FILE"
